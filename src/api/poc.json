{
  "name": "Convert Video...",
  "icon": "C:\\Users\\ori\\Pictures\\arrow.ico",
  "conditions": {
    "file_name": {"$contains": "hello"},
    "file_size": {"$lt": "30MB"},
    "extension": ".mp4"
  },
  "sub_menus": [
    {
      "name": "Convert Resolution...",
      "sub_menus": [
        {
          "name": "Convert to 720p",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -vf \"scale=-1:720\" -c:v libx264 -preset fast -c:a copy \"%V\"-720p.mp4"
        },
        {
          "name": "Convert to 1080p",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -vf \"scale=-1:1080\" -c:v libx264 -preset fast -c:a copy \"%V\"-1080p.mp4"
        }
      ]
    },
    {
      "name": "Convert Speed...",
      "sub_menus": [
        {
          "name": "Speed up by 1.5x",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -filter:v \"setpts=PTS/1.5\" -filter:a \"atempo=1.5\" \"%V\"-1.5x.mp4"
        },
        {
          "name": "Speed up by 1.25x",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -filter:v \"setpts=PTS/1.25\" -filter:a \"atempo=1.25\" \"%V\"-1.25x.mp4"
        },
        {
          "name": "Speed up by 0.75x",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -filter:v \"setpts=PTS/0.75\" -filter:a \"atempo=0.75\" \"%V\"-0.75x.mp4"
        },
        {
          "name": "Speed up by 0.5x",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -filter:v \"setpts=PTS/0.5\" -filter:a \"atempo=0.5\" \"%V\"-0.5x.mp4"
        },
        {
          "name": "Speed up by 0.25x",
          "exec": "cmd.exe /c ffmpeg -i \"%V\" -filter:v \"setpts=PTS/0.25\" -filter:a \"atempo=0.5,atempo=0.5\" \"%V\"-0.25x.mp4"
        }
      ]
    }
  ]
}